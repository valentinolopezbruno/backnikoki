generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/sistemanikoki"
}

model categorias {
  id     Int    @id @default(autoincrement())
  nombre String @db.VarChar(255)
}

model clientes {
  id        Int    @id @default(autoincrement())
  nombre    String @db.VarChar(111)
  celular   String @db.VarChar(255)
  direccion String @db.VarChar(250)
  dni       String @db.VarChar(255)
  correo    String @db.VarChar(255)
}

model marcas {
  id     Int    @id @default(autoincrement())
  nombre String @db.VarChar(255)
}

model productos {
  id             Int    @id @default(autoincrement())
  idcategoria    Int
  idmarca        Int
  nombre         String @db.VarChar(250)
  precio         Int
  idmoneda       Int
  descripcion    String @db.VarChar(255)
  disponibilidad Int
}

model productosporventas {
  id         Int @id @default(autoincrement())
  idVenta    Int
  idProducto Int
  cantidad   Int
}

model usuarios {
  id       Int    @id @default(autoincrement())
  usuario  String @db.VarChar(255)
  password String @db.VarChar(255)
}

model ventas {
  id        Int    @id @default(autoincrement())
  idCliente Int
  total     Int
  fecha     String @db.VarChar(255)
}
